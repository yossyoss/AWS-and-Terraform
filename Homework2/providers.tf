##################################################################################
# CONFIGURATION (for Terraform > 0.12)
##################################################################################
terraform {
  required_providers {
    aws = {
        source = "hashicorp/aws"
        version = "~> 3.63"
    }
  }
}

##################################################################################
# PROVIDERS
##################################################################################

provider "aws" {
  profile = "Yossi"
  region  = var.aws_region
  default_tags {
    tags = {
      Owner = var.owner_tag
    }
  }
}